{
  "name": "inventory-store-management",
  "version": "1.0.0",
  "description": "A complete inventory management system with Vue.js frontend and PHP backend",
  "main": "backend/server.php",
  "scripts": {
    "install:backend": "cd backend && composer install",
    "install:frontend": "cd frontend && npm install", 
    "install:all": "npm run install:backend && npm run install:frontend",
    "start:backend": "cd backend && php -S localhost:8000 server.php",
    "start:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "test:api": "echo 'API tests not implemented yet'"
  },
